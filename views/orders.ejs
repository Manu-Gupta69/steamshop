<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title><%= pagetitle %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500">
    <link rel="stylesheet" href="/css/Contact-Form-Clean.css">
    <link rel="stylesheet" href="/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/orders.css">
</head>

<body id="body">
    <section id="add-sec">
        <%- include('includes/nav.ejs') %>
    </section>
    <section class="formsec" id="form-sec">
        <div class="wave wave1"></div>
        <div class="wave wave2"></div>
        <div class="wave wave3"></div>
        <div class="wave wave4"></div>
        <h1 class="text-center" id="h2" style="color: rgb(255,255,255);padding-top: 66px;">YOUR ORDERS</h1>
        <p class="text-center" id="h2-para">Your purchased steam accounts &amp; there dedicated games</p>
    </section>
    <section id="realform" style="padding-top: 50px;">
        <% if (orders.length <= 0) { %>
            <h2 style="padding: 40px; text-align: center;">Nothing there!</h2>
        <% } else { %>
            <ul class="orders">
                <% orders.forEach(order => { %>
                    <li class="orders__item">
                        <h1>Order - # <%= order._id %> - <a href="/orders/<%= order._id %>">INVOICE </a></h1>
                        <ul class="orders__products">
                            <% order.products.forEach(p => { %>
                                <li class="orders__products-item"><%= p.product.title %></li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </section>
</body>