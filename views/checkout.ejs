<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title><%= pagetitle %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500">
    <link rel="stylesheet" href="/css/Contact-Form-Clean.css">
    <link rel="stylesheet" href="/css/Login-Form-Dark.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body id="body">
    <section id="add-sec">
        <%- include('includes/nav.ejs') %>
    </section>
    <section class="formsec" id="form-sec">
        <div class="wave wave1"></div>
        <div class="wave wave2"></div>
        <div class="wave wave3"></div>
        <div class="wave wave4"></div>
        <h1 class="text-center" id="h2" style="color: rgb(255,255,255);padding-top: 66px;">YOUR CART</h1>
        <p class="text-center" id="h2-para">All your added product showed here.</p>
    </section>
    <section id="realform">
    <div class="contact-clean">
        <div class="centered">
        <div class="row">
            <% products.forEach(p => { %>
        <div class="card" style="width: 30rem; height: auto; margin-left: 10px;">
            <img class="card-img-top" src="<%= p.productId.imgurl %>" alt="Card image cap">
            <div class="card-body" style="text-align: center; text-transform: uppercase;">
              <h5 class="card-title"><%= p.productId.title %> </h5>
              <h5 class="card-title">QUANTITY : <%= p.quantity %> </h5>
              <h5 class="card-title">PRICE :  &#8377 <%= p.productId.price %> </h5>
            </div>
          </div>
          <% }) %>
        </div> 

        <h1 style="text-align: center; margin-top: 35px ; font-size: 25px;"> TOTAL AMOUNT -  &#8377; <%= totalSum %> </h1>
    </div>
    </div>
    <div class="centered">
        <form action="/orders" method="POST">
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="pk_test_Fd3Uz9poamTnUMMuhWloblP800uk2bkL9b"
              data-amount="<%= totalSum * 100 %>"
              data-name="Your Order"
              data-description="All the items you ordewred"
              data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
              data-locale="auto"
              data-currency="inr">
            </script>
          </form>
    </div>
</section>
    <script src="/css/jquery.min.js"></script>
    <script src="/css/bootstrap.min.js"></script>
</body>

</html>